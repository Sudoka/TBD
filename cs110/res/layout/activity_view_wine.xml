<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:clickable="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="center"
    tools:context=".ViewWine" >

 <EditText
     android:id="@+id/winename"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="37dp"
     android:background="@color/PaleGoldenrod"
     android:clickable="false"
     android:cursorVisible="false"
     android:ems="10"
     android:fadingEdgeLength="@dimen/activity_horizontal_margin"
     android:gravity="center"
     android:inputType="textMultiLine|textNoSuggestions"
     android:scrollbarAlwaysDrawVerticalTrack="false"
     android:textAlignment="center"
     android:textColor="@color/black"
     android:textColorLink="@color/maroon"
     android:textStyle="italic"
     android:typeface="serif" />

 <EditText
     android:id="@+id/winedsc"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/winename"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="15dp"
     android:background="@color/PaleGoldenrod"
     android:cursorVisible="false"
     android:ems="12"
     android:enabled="true"
     android:gravity="center"
     android:includeFontPadding="false"
     android:inputType="textMultiLine|textNoSuggestions"
     android:linksClickable="false"
     android:maxHeight="@android:dimen/notification_large_icon_height"
     android:maxLines="5"
     android:scrollbarAlwaysDrawVerticalTrack="true"
     android:scrollbars="vertical"
     android:selectAllOnFocus="false"
     android:text="\n\n\n\n\n"
     android:textAlignment="center"
     android:textColor="@color/Black"
     android:textColorHint="@color/Black"
     android:textColorLink="@color/Black"
     android:typeface="normal" >

     <requestFocus />
 </EditText>

 <Button
     android:id="@+id/ButtonRemoveFav"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/winedsc"
     android:layout_marginTop="20dp"
     android:drawableRight="@drawable/ic_remove_fav"
     android:onClick="removeFav"
     android:text="Remove from Favorites" />

 <Button
     android:id="@+id/ButtonRemoveWish"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/winedsc"
     android:layout_marginTop="80dp"
     android:drawableRight="@drawable/ic_remove_wish"
     android:onClick="removeWish"
     android:text="Remove from Wishlist" />

 <Button
     android:id="@+id/buttonAddFav"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/winedsc"
     android:layout_marginTop="20dp"
     android:drawableRight="@drawable/ic_add_fav"
     android:onClick="addtoFav"
     android:text="Add to Favorites" />

 <Button
     android:id="@+id/buttonAddWish"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/winedsc"
     android:layout_marginTop="80dp"
     android:drawableRight="@drawable/ic_add_wish"
     android:onClick="addtoWish"
     android:text="Add to Wishlist" />

</RelativeLayout>
